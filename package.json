{
  "name": "regexstash",
  "displayName": "RegexStash",
  "description": "Helping you clean data when you have to run a variety of regexes multiple times",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "myextension-sidebar-view",
					"title": "My Extension",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"myextension-sidebar-view": [
				{
					"type": "webview",
					"id": "myextension-sidebar",
					"name": "MyExtension",
					"icon": "media/icon.svg",
					"contextualTitle": "MyExtension"
				}
			]
		},
    "commands": [
      {
        "command": "regexstash.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "regexstash.replaceInFile",
        "title": "Replace In File"
      },
      {
        "command": "regexstash.testReplace",
        "title": "Test Replace"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "1.83.1",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.5.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.6"
  }
}
